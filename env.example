# 钉钉配置
DINGTALK_CLIENT_ID=your_client_id
DINGTALK_CLIENT_SECRET=your_client_secret
DINGTALK_AI_CARD_TEMPLATE_ID=your_template_id

# Dify配置
DIFY_API_BASE=https://api.dify.ai/v1
DIFY_API_KEY=app-xxx
DIFY_APP_TYPE=chat
DIFY_USE_WORKFLOW=false
DIFY_WORKFLOW_ID=your_workflow_id

# 服务器配置
SERVER_PORT=9000
SERVER_HOST=0.0.0.0
SESSION_TIMEOUT=1800
STREAM_MODE=ai_card
SERVER_ENV=true

# 网络配置
REQUESTS_TIMEOUT=60
MAX_RETRIES=3

# 文件处理配置
MAX_FILE_SIZE_MB=100
MAX_DOWNLOAD_SIZE_MB=10
TEMP_FILE_DIR=/tmp
UPLOAD_TO_DIFY=true
ENABLE_DINGTALK_DRIVE=true

# 钉钉云盘配置
DINGTALK_DRIVE_SPACE_TYPE=org
DINGTALK_DRIVE_STORAGE_DRIVER=DINGTALK
DINGTALK_DRIVE_CONFLICT_STRATEGY=OVERWRITE
DINGTALK_DRIVE_CONVERT_TO_ONLINE_DOC=false

# SSL配置
SSL_VERIFY=false
SSL_DISABLE_WARNINGS=true

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=text

# 时区配置
TZ=Asia/Shanghai
